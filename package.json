{
  "name": "crossfire",
  "version": "0.1.0",
  "private": true,
  "description": "Live two-player word puzzle game",
  "workspaces": [
    "frontend",
    "worker"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend & npm run dev --workspace=worker",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:worker": "npm run dev --workspace=worker",
    "build": "npm run build --workspace=frontend",
    "build:frontend": "npm run build --workspace=frontend",
    "deploy": "npm run deploy --workspace=frontend && npm run deploy --workspace=worker",
    "deploy:frontend": "npm run deploy --workspace=frontend",
    "deploy:worker": "npm run deploy --workspace=worker",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:prod": "E2E_BASE_URL=https://crossfire-dzy.pages.dev npx playwright test"
  },
  "keywords": [
    "game",
    "puzzle",
    "cloudflare",
    "websockets"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/node": "^25.0.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
